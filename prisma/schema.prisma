generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  id        String   @id @default(cuid())
  itemCode  String?  // Optional field
  itemName  String
  category  String
  color     String   @default("Not Specified")
  quantity  Int
  unitPrice Float
  supplier  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("stocks")
}
